    <pous>
      <pou name="DWORD_TO_BCD" pouType="functionBlock">
        <interface>
          <inputVars>
            <variable name="en">
              <type>
                <BOOL />
              </type>
            </variable>
            <variable name="win">
              <type>
                <DWORD />
              </type>
            </variable>
          </inputVars>
          <outputVars>
            <variable name="eno">
              <type>
                <BOOL />
              </type>
            </variable>
            <variable name="err">
              <type>
                <BOOL />
              </type>
            </variable>
            <variable name="bout">
              <type>
                <DWORD />
              </type>
            </variable>
          </outputVars>
          <localVars>
            <variable name="n">
              <type>
                <DWORD />
              </type>
            </variable>
            <variable name="d">
              <type>
                <DWORD />
              </type>
            </variable>
            <variable name="digit">
              <type>
                <INT />
              </type>
            </variable>
            <variable name="base">
              <type>
                <DWORD />
              </type>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml xmlns="http://www.w3.org/1999/xhtml">err := FALSE;
n := win;
bout := 0;

IF en THEN
	IF win &gt; 99999999 THEN
		err := TRUE;
		RETURN;
	END_IF
	
	FOR digit := 7 TO 0 BY -1 DO
		base := LREAL_TO_DWORD(EXPT(10, digit));
		d := n / base;
		bout := bout + SHL(d, digit * 4);
		n := n - d * base;
	END_FOR
	
	eno := TRUE;
ELSE
	eno := FALSE;
END_IF</xhtml>
          </ST>
        </body>
